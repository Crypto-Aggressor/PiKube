#cloud-config

# Set TimeZone and Locale for UK
timezone: Europe/London
locale: en_GB.UTF-8

# Hostname
hostname: raspberry-worker

# cloud-init not managing hosts file. only hostname is added
manage_etc_hosts: localhost

users:
  # not using default ubuntu user
  - name: pi
    primary_group: users
    groups: [adm, admin]
    shell: /bin/bash
    sudo: ALL=(ALL) NOPASSWD:ALL
    lock_passwd: true
    ssh_authorized_keys:
      - ssh-rsa  amine@Who-Am-I
     
## Reboot to enable Wifi configuration (more details in network-config file)
power_state:
  mode: reboot